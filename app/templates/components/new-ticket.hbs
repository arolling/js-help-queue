
<form>
  <div class="form-group">
    <label for="client">Your Name</label>
    {{input value=client id="client" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="description">Describe your problem:</label>
    {{input value=description id="description" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="time">Time:</label>
    {{input value=time id="time" class="form-control"}}
  </div>
  <button {{action 'save'}} class="btn btn-lg btn-primary" >Help!</button>
</form>

{{yield}}
